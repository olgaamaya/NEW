<script>
document.addEventListener('DOMContentLoaded', () => {
    // Example: Folder name for this lightbox (Project Clara Infante x MANGO Home)
    const folderName = 'clarainfante';  // This could be dynamically set depending on the project

    // Fetch the images dynamically (replace with your actual fetch logic)
    fetch(`/get-images/${folderName}`)
        .then(response => response.json())  // Expecting an array of image file names
        .then(images => {
            const lightboxContent = document.getElementById('lightbox-content-16');  // Modal content container

            images.forEach((image, index) => {
                // Create a slide div for each image
                const slide = document.createElement('div');
                slide.classList.add(`slide16`);  // Add class for this specific lightbox

                // Create the image element
                const imgElement = document.createElement('img');
                imgElement.src = `/images/${folderName}/${image}`;  // Update this path based on where your images are stored
                imgElement.classList.add('image-slide');  // Add class that the JS will expect
                imgElement.alt = "professional fashion picture";
                imgElement.setAttribute('loading', 'lazy');  // Lazy loading attribute

                // Append the image to the slide container
                slide.appendChild(imgElement);

                // Append the slide to the lightbox content container
                lightboxContent.appendChild(slide);
            });
        })
        .catch(error => console.error('Error loading images:', error));
});
</script>
